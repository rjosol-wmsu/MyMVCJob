@model IEnumerable<RjWeb.Areas.Security.Models.UserModelView>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Users</h1>

                <a href="@Url.Action("Create")" class="btn btn-info">
                <span class="glyphicon glyphicon-edit"></span> Create New
            </a>
            <p>
   
            </p>
            <table class="table">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Age)
                    </th>
                    
                    <th>
                        @Html.DisplayNameFor(model => model.Gender)
                    </th>

                    <th> Action</th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Age)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Gender)
                        </td>


                        <td>
                            <a href="@Url.Action("Edit", new {  id=item.Id })" class="text-info">
                                <span class="glyphicon glyphicon-pencil"></span>Edit
                            </a>&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp |
                            <a href="@Url.Action("Details", new {  id=item.Id })" class="text-info">
                                <span class="glyphicon glyphicon-user"></span> Details
                            </a>&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp |
                            <a href="@Url.Action("Delete", new {  id=item.Id })" class="text-danger">
                                <span class="glyphicon glyphicon-trash"></span>Delete
                            </a>
                        </td>
                    </tr>
                }

            </table>
